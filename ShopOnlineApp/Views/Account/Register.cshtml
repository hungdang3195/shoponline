@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<style>
    .rc-anchor.rc-anchor-normal.rc-anchor-light {
        margin-top: 8px;
    }
</style>
<div class="breadcrumbs">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <ul>
                    <li class="home"> <a title="Go to Home Page" href="/">Home</a><span>&raquo;</span></li>
                    <li><strong>Register</strong></li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumbs End -->
<!-- Main Container -->
<section class="main-container col1-layout">
    <div class="main container">
        <div class="page-content">
            <div class="account-login">
                <div class="col-md-3 col-sm-2"></div>
                <div class="col-md-6 col-sm-8">
                    <div class="single-input p-bottom50 clearfix">
                        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                            <div class="row">
                                <div class="col-xs-12">
                                    <div class="check-title">
                                        <div asp-validation-summary="All" class="text-danger"></div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <label>Full Name*:</label>
                                    <div class="input-text">
                                        <input type="text" asp-for="FullName" name="fullName" class="form-control">
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <label>Email*:</label>
                                    <div class="input-text">
                                        <input type="text" asp-for="Email" name="email" class="form-control">
                                    </div>
                                </div>
                                <div class="col-xs-12">
                                    <label>Password*:</label>
                                    <div class="input-text">
                                        <input type="password" asp-for="Password" name="password" class="form-control">
                                    </div>
                                </div>
                                <div class="col-xs-12">
                                    <label>Confirm Password*:</label>
                                    <div class="input-text">
                                        <input type="password" asp-for="ConfirmPassword" name="confirmPassword" class="form-control">
                                    </div>
                                </div>
                                <div class="col-xs-12">
                                    <label>Gender:</label>
                                    <div class="input-text">
                                        <label><input asp-for="Gender" value="true" type="radio" />Male</label>
                                        <span class="d-none">sdsdsdsd</span>
                                        <label><input asp-for="Gender" value="false" type="radio" />Female</label>
                                    </div>
                                </div>
                                <div class="col-xs-12">
                                    <label>Address:</label>
                                    <div class="input-text">
                                        <input type="text" asp-for="Address" name="Address" class="form-control">
                                    </div>
                                </div>
                                <div class="col-xs-12">
                                    <label>DOB:</label>
                                    <div class="input-text">
                                        <input type="date" asp-for="BirthDay" name="BirthDay" class="form-control">
                                    </div>
                                </div>

                                <div class="col-sm-12">
                                    <label>Image:</label>
                                    <div class="input-group">
                                        <span><img id="image_place" src="./client-side/images/default-image.png" width="140px" height="140px"></span>
                                        <input type="file" id="fileImages" style="margin-top: 10px;">
                                    </div>
                                    <input type="hidden" asp-for="Avatar" id="avatar" />
                                </div>

                                <div class="col-sm-6">
                                    <label>Phone Number:</label>
                                    <div class="input-text">
                                        <input type="text" name="phoneNumber" asp-for="PhoneNumber" class="form-control">
                                    </div>
                                </div>
                                @*<div class="col-sm-6">
                                        <label>Address:</label>
                                        <div class="input-text">
                                            <input type="text" name="address" asp-for="Address" class="form-control">
                                        </div>
                                    </div>*@
                                <div class="clearfix">

                                </div>

                                <div class="col-sm-6">
                                    <label></label>
                                    <recaptcha />
                                    <span class="text-danger" id="recaptchaErrorMessage"></span>
                                </div>

                                <div class="col-xs-12">
                                    <br />
                                    <div class="submit-text">
                                        <button type="submit" class="button"><i class="fa fa-user"></i>&nbsp; <span>Register</span></button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Main Container End -->

@section Scripts {

    @await Html.PartialAsync("_ValidationScriptsPartial")

    <recaptcha-script validation-message-element-id="recaptchaErrorMessage" />
    <script src="~/client-app/controllers/account/register.js" asp-append-version="true"></script>
    <script>
        $(function () {
            var register = new registerController();
            register.initialize();
        });
    </script>
}

