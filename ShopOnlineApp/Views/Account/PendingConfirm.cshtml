            </form>
            <p class="text-muted text-bold text-center">
                <a class="btn btn-outline-primary btn--login btn-register text-bold" href="/Account/Login">TRỞ VỀ ĐĂNG NHẬP</a>
            </p>
        </div>

    </div>
</div>

@section Scripts {
    
    <script>
        $(function () {
           
            $('#button-resend').on('click',
                () => {
                    $.ajax({
                        type: "Get",
                        url: "/Account/EmailCallback",
                        data: {
                           email: "@ViewBag.email",
                           send: "@ViewBag.send"
                        },
                        success: function (path) {
                        },
                        error: function () {
                            shoponline.notify('There was error uploading files!', 'error');
                        }
                    });
                });
        });

    </script>
}
