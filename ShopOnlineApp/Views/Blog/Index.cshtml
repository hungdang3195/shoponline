                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <!-- ./layered -->
                        </div>
                    </div>*@
                <!-- ./Recent Comments -->
                <!-- tags -->
                <div class="popular-tags-area block">
                    <div class="sidebar-bar-title">
                        <h3>Popular Tags</h3>
                    </div>
                    <div class="tag">
                        <ul>
                            @foreach (var item in Model.BlogTags)
                            {
                            <li><a href="#">@item.TagId</a></li>

                            }

                        </ul>
                    </div>
                </div>

                <!-- ./tags -->
                <!-- Banner -->
                <div class="single-img-add sidebar-add-slider">
